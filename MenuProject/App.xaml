<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MenuProject"
             xmlns:page="clr-namespace:MenuProject.Pages"
             x:Class="MenuProject.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.MainPage>
        <Shell>
            <TabBar x:Name="ApplicationTabs">
                <Tab Title="Home" Icon="home.svg">
                    <ShellContent ContentTemplate="{DataTemplate page:HomePage}"/>
                </Tab>
                <Tab Title="Beállítások" Icon="settings.svg">
                    <ShellContent ContentTemplate="{DataTemplate page:SettingsPage}"/>
                </Tab>
                <Tab Title="Rólunk" Icon="home.svg">
                    <ShellContent ContentTemplate="{DataTemplate page:AboutPage }"/>
                </Tab>

            </TabBar>
        </Shell>
    </Application.MainPage>

</Application>
